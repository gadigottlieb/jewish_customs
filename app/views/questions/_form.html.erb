<div id="new-question">
  <%= form_for [@test, @question] do |f| %>

    <%= f.label :question %>
    <%= f.text_field :question %><br>

    <%= f.label :option_1 %>
    <%= f.text_field :option_1 %><br>

    <%= f.label :option_2 %>
    <%= f.text_field :option_2 %><br>

    <%= f.label :option_3 %>
    <%= f.text_field :option_3 %><br>

    <%= f.label :option_4 %>
    <%= f.text_field :option_4 %><br>

    <%= f.label :correct_answer %>
    <%= f.text_field :correct_answer %><br>

    <%= f.label :category_id, 'Category' %>
    <%= f.select :category_id, options_for_select(@categories.map {|category| [category.title, category.id]}) %><br>

    <%= f.submit %><br>
  <% end %>
</div>
