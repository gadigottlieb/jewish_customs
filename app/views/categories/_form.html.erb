
<%= form_for @category do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.label :photo %>
  <%= f.text_field :photo %><br>

  <%= f.label :bible_quote %>
  <%= f.text_area :bible_quote %><br>

  <%= f.label :bible_src %>
  <%= f.text_field :bible_src %><br>

  <%= f.label :plot %>
  <%= f.text_area :plot %><br>

  <%= f.label :customs %>
  <%= f.text_area :customs %><br>

  <%= f.label :date %>
  <%= f.text_field :date %><br>

  <%= f.submit %><br>

<% end %>
