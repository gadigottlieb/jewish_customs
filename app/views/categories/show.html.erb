<div id="category-show-page">
  <% if can? :update, @category %>
    <div id="edit">
      <%= link_to 'Edit', edit_category_path(@category) %>
    </div>
  <% end %>
  <div id="show-category-title">
    <h1><%= @category.title %></h1>
  </div>
  <div id="show-category-photo">
    <%= image_tag(@category.photo) %>
  </div>
  <div id="bible-quote">
    <h3 class="description">Bible Quote</h3>
    <div id="quote">"</div>
      <%= @category.bible_quote %>
    <div id="quote">"</div>
  </div>
  <div id="bible-src">
  <h3 class="description">Bible Source</h3>
    <%= @category.bible_src %>
  </div>
  <div id="date">
    <h3 class="description">Date</h3>
    <%= @category.date %>
  </div>
  <div id="plot">
    <h3 class="description">Plot</h3>
    <%= @category.plot %>
  </div>
  <div id="customs">
    <h3 class="description">Customs</h3>
    <%= @category.customs %>
  </div>
  <% if @category.questions.map(&:tests).last %>
    <div id="test">
      <%=link_to "#{@category.title} Test", test_path(@category.questions.map(&:tests).last.first.id) %>
    </div>
  <%end%>
</div>
